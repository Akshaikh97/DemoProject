@model DemoProject.Models.UserModel

@{
    ViewBag.Title = "saveUser";
}

<h2>saveUser</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>UserModel</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.stFirstName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.stFirstName, new { htmlAttributes = new { @class = "form-control" , @placeholder = "First Name" } })
            @Html.ValidationMessageFor(model => model.stFirstName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.stLastName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.stLastName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Last Name" } })
            @Html.ValidationMessageFor(model => model.stLastName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">

        @Html.LabelFor(model => model.dtUserBirthDate, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.dtUserBirthDate, "{0:dd/MM/yyyy}", new { htmlAttributes = new { @class = "form-control", @placeholder = "YYYY/MM/DD" } })
            @Html.ValidationMessageFor(model => model.dtUserBirthDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-2 text-danger"> @ViewBag.Msg </p>
        @Html.LabelFor(model => model.stUserEmail, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.stUserEmail, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email Address" } })
            @Html.ValidationMessageFor(model => model.stUserEmail, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        @Html.LabelFor(model => model.stUserPassword, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.stUserPassword, new { htmlAttributes = new { @class = "form-control", @placeholder = "Password" } })
            @Html.ValidationMessageFor(model => model.stUserPassword, "", new { @class = "text-danger" })
        </div>
    </div>
    <br>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-2 text-center">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
</div>
}

